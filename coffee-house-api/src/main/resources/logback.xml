<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%highlight(%-5level)] %magenta(%msg%n)</pattern>
        </encoder>
    </appender>
    <root level="ERROR">
        <appender-ref ref="ConsoleAppender"/>
    </root>
    <logger name="com.project.ch" level="DEBUG" additivity="false">
        <appender-ref ref="ConsoleAppender"/>
    </logger>
</configuration>
